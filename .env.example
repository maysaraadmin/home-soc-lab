# ========================
# SOC Environment Variables
# ========================

# Elasticsearch
ELASTIC_USERNAME=elastic
ELASTIC_PASSWORD=your_secure_elastic_password_here

# Cassandra
CASSANDRA_USER=cassandra
CASSANDRA_PASSWORD=your_secure_cassandra_password_here

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=thehive

# TheHive
THEHIVE_SECRET=generate_a_secure_random_key_here

# Cortex
CORTEX_SECRET=generate_another_secure_random_key_here
CORTEX_DB_PASSWORD=your_secure_cortex_db_password_here

# MinIO (for file storage)
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key

# Security
JWT_SECRET_KEY=generate_a_secure_random_key_here
SECRET_KEY=another_secure_random_key_here

# API Settings
API_DEBUG=False
API_HOST=0.0.0.0
API_PORT=8000

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]

# ========================
# Optional Configuration
# ========================

# Email Settings (for alerts)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASSWORD=your_email_password
# SMTP_FROM=noreply@yourdomain.com

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Session Configuration
SESSION_SECRET=generate_secure_session_secret
SESSION_TIMEOUT=86400  # 24 hours in seconds

# Rate Limiting
RATE_LIMIT=100  # requests per minute
