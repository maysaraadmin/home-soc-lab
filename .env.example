# ========================
# Required Configuration
# ========================

# TheHive Configuration
# --------------------
# URL of TheHive instance (include http:// or https://)
THEHIVE_URL=http://thehive:9000
# API key for TheHive (generate from TheHive web interface)
THEHIVE_API_KEY=your_thehive_api_key_here

# FAISS Service Configuration
# --------------------------
# URL of the FAISS service (include http:// or https://)
FAISS_SERVICE_URL=http://faiss-service:7860
# Dimension of the vectors in the FAISS index
VECTOR_DIMENSION=128
# Path to store the FAISS index (relative to the FAISS service container)
FAISS_INDEX_PATH=/app/data/faiss_index

# Wazuh Configuration
# ------------------
# Wazuh Manager hostname
WAZUH_MANAGER=wazuh.manager
# Wazuh API port (default: 55000)
WAZUH_API_PORT=55000
# Wazuh API username
WAZUH_API_USER=wazuh
# Wazuh API password (change this in production!)
WAZUH_API_PASSWORD=wazuh

# Monitoring Configuration
# -----------------------
# Enable Prometheus metrics (true/false)
ENABLE_METRICS=true
# Prometheus port (default: 9090)
PROMETHEUS_PORT=9090
# Grafana port (default: 3000)
GRAFANA_PORT=3000

# Backup Configuration
# -------------------
# Enable automatic backups (true/false)
ENABLE_BACKUPS=true
# Backup frequency in hours
BACKUP_FREQUENCY=24
# Number of backups to keep
BACKUP_RETENTION=7
# Path to store backups (relative to host)
BACKUP_PATH=./backups

# Security
# --------
# Secret key for session encryption
SECRET_KEY=change-this-to-a-secure-random-string
# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1
